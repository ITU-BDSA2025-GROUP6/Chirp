@page "/"
@model Chirp.Web.Pages.PublicModel
@using Chirp.Core
@inject SignInManager<Author> SignInManager

@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";

    var currentPage = 1;
}

<div>
    <h2>Public Timeline</h2>

    @if (SignInManager.IsSignedIn(User))
    {
        <div class="cheepbox">
            <h3>Chirp little bird, @(User.Identity?.Name ?? "anon")</h3>

            <form method="post">
                @Html.AntiForgeryToken()
                <div>
                    <input type="text"
                           asp-for="Text"
                           maxlength="200"
                           style="float:left" />
                    <input type="submit" value="Share" />
                </div>

                <span asp-validation-for="Text" class="text-danger"></span>
            </form>
        </div>
    }

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                var isFollowing = Model.IsFollowing(cheep.AuthorName);

                <li>
                    <div class="cheep-item">
                        <img src="@cheep.ProfilePicturePath"
                             class="pfp"
                             alt="Profile picture" />

                        <div class="cheep-body">
                            <div class="cheep-header">
                                <strong>
                                    <a href="/@cheep.AuthorName">
                                        @cheep.AuthorName
                                    </a>
                                </strong>

                                @if (User.Identity?.IsAuthenticated == true &&
                                     User.Identity.Name != cheep.AuthorName)
                                {
                                    <a class="followbutton @(isFollowing ? "following" : "")"
                                       asp-page-handler="FollowBtn"
                                       asp-route-authorname="@cheep.AuthorName">
                                        @(isFollowing ? "Unfollow" : "Follow")
                                    </a>
                                }
                            </div>

                            <div class="cheep-content">
                                <p>@cheep.Text</p>

                                <div class="cheep-footer">
                                    <small>&mdash; @cheep.Timestamp</small>

                                    @if (User.Identity?.Name == cheep.AuthorName)
                                    {
                                        <form method="post"
                                              asp-page-handler="Delete"
                                              class="deleter">
                                            <input type="hidden"
                                                   name="cheepID"
                                                   value="@cheep.CheepID" />
                                            <button type="submit"
                                                    class="deletebutton"
                                                    onclick="return confirm('Delete this cheep?');"
                                                    aria-label="Delete cheep">
                                                🗑️
                                            </button>
                                        </form>
                                    }

                                    @if (SignInManager.IsSignedIn(User) &&
                                         User.Identity?.Name != cheep.AuthorName)
                                    {
                                        <form method="post"
                                              asp-page-handler="Recheep">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden"
                                                   name="CheepID"
                                                   value="@cheep.CheepID" />
                                            <button type="submit"
                                                    class="btn btn-sm btn-primary">
                                                Recheep
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>

        <div class="navigation">
            @if (currentPage > 1)
            {
                <a href="/page/@(currentPage - 1)">« Prev</a>
            }
            <a href="/page/@(currentPage + 1)">Next »</a>
            <a href="/">Home</a>
        </div>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}