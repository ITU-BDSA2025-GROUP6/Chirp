    @page "/{author}"
    @model Chirp.Razor.Pages.UserTimelineModel
    @{
        ViewData["Title"] = "Chirp!";
        Layout = "Shared/_Layout";
        var routeName = HttpContext.GetRouteValue("author");
        var currentPage = 1;
    }

    <div>
        <h2> @routeName's Timeline - Page @currentPage </h2>

        @if (Model.Cheeps.Result.Any())
        {
            <ul id="messagelist" class="cheeps">
                @foreach (var cheep in Model.Cheeps.Result)
                {
                    <li>
                        <p>
                            <strong>
                                <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                            </strong>
                            @cheep.Text
                            <small>&mdash; @cheep.Timestamp</small>
                        </p>
                    </li>
                }
            </ul>
            
            <nav class="pager" style="margin-top:1rem; display:flex; gap:.75rem;">
                @if (currentPage > 1)
                {
                    <a href="/@routeName/page/@(currentPage - 1)">« Prev</a>
                }
                <a href="/@routeName/page/@(currentPage + 1)">Next »</a>
            </nav>
            
            <nav class="home" style="margin-top:1rem; display:flex; gap:.75rem;">
                <a href="/">Home</a>
            </nav>
        }
        else
        {
            <em>There are no cheeps so far.</em>
        }
    </div>
